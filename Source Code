                                System.out.println("Mengubah Harga Crepes Coklat");
                                System.out.print("Harga Baru  = "); 
                                hargaBaru=sc.nextInt();
                                hargacrepescoklat = hargaBaru;
                                System.out.println("Harga telah diubah");
                                break;
