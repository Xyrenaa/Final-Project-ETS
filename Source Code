                            System.out.println("Kebab Sedang");
                            System.out.print("Jumlah = ");
                            jumlah=sc.nextInt();
                            total=jumlah*hargakebabsedang;
                            grandTotal = grandTotal+total;
                            System.out.println("Total = "+total);
                            System.out.println("Grand Total = "+grandTotal);
