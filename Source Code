                                System.out.println("Harga telah diubah");
                                break;
                            case 3:
                                System.out.println("Mengubah Harga Kebab Jumbo");
                                System.out.print("Harga Baru  = ");
                                hargaBaru=sc.nextInt();
                                hargakebabjumbo = hargaBaru;
                                System.out.println("Harga telah diubah");
                                break;
                            case 4:
                                System.out.println("Mengubah Harga Burger Sapi");
                                System.out.print("Harga Baru  = "); 
                                hargaBaru=sc.nextInt();
                                hargaburgersapi = hargaBaru;
