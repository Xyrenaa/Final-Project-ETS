                                System.out.println("Mengubah Harga Crepes Keju Coklat");
                                System.out.print("Harga Baru  = ");
                                hargaBaru=sc.nextInt();
                                hargacrepeskejucoklat = hargaBaru;
                                System.out.println("Harga telah diubah");
                                break;
